# SmartShelf AI Chat Service - Environment Configuration Template
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED API KEYS
# ===========================================
# Use one of these (DeepSeek preferred - cost-effective):
# OpenAI: https://platform.openai.com/api-keys
# DeepSeek: https://platform.deepseek.com/
OPENAI_API_KEY=sk-your-openai-api-key-here
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here

# ===========================================
# SERVICE CONFIGURATION
# ===========================================
DEBUG=false
LOG_LEVEL=info
PYTHONPATH=/app

# ===========================================
# PROXY CONFIGURATION (Optional)
# ===========================================
# Uncomment and set if you're behind a corporate proxy
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=https://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1

# ===========================================
# AI/ML CONFIGURATION
# ===========================================
# Embedding model for semantic search
EMBEDDINGS_MODEL=all-MiniLM-L6-v2

# Vector database configuration
VECTOR_DB_PATH=/app/data/vector_store

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
# Maximum concurrent requests
MAX_WORKERS=4

# Request timeout in seconds
REQUEST_TIMEOUT=60

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Log level (debug, info, warning, error)
LOG_LEVEL=info

# Enable structured logging
STRUCTURED_LOGGING=true

# ===========================================
# SECURITY
# ===========================================
# CORS origins (comma-separated)
# For production, set specific domains instead of *
CORS_ORIGINS=*

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# ===========================================
# DEPLOYMENT SETTINGS
# ===========================================
# Build metadata
BUILD_DATE=2024-01-01T00:00:00Z
VERSION=1.0.0
VCS_REF=latest

# ===========================================
# OPTIONAL EXTERNAL SERVICES
# ===========================================
# Redis cache (if using)
REDIS_URL=redis://localhost:6379/0

# Monitoring (if using)
SENTRY_DSN=
PROMETHEUS_ENABLED=false
